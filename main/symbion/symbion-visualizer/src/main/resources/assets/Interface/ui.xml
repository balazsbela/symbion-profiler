<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<useControls filename="nifty-default-controls.xml" />
	<useStyles filename="nifty-default-styles.xml" />

	<screen id="hud" controller="org.balazsbela.symbion.overlays.controllers.HudController">
		<layer id="background" childLayout="center">
		</layer>
		<layer id="foreground" backgroundColor="#0000" childLayout="horizontal">
			<panel id="panel_left" width="100%" height="10%" childLayout="vertical">
<!-- 				<text text="Search" font="assets/Interface/Fonts/verdana-48-regular.fnt" /> -->
													
					<control id="searchButton" name="button" label="Search" valign="center" width="20%" height="20%" visibleToMouse="true">
						<interact onClick="searchButtonClicked()"/>
					</control>	
					<control id="searchText" name="textfield" color="#000" text="" backgroundColor="#0f07" width="20%" height="20%" >
					</control>				
			</panel>
			
		</layer>		
	</screen>
</nifty>
